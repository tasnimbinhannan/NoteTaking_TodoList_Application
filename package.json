{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "A beautiful task manager application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "build-zip": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win zip --config.win.signAndEditExecutable=false"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.taskmanager.app",
    "win": {
      "target": "zip",
      "icon": "assets/icon.ico"
    }
  }
}